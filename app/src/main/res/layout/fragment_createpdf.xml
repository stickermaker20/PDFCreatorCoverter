<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/text_to_pdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_text_format_black_24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_to_pdf"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conver your text to PDF format"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/images_to_pdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:tint="@color/colorPrimary"

                android:src="@drawable/ic_menu_camera"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/images_to_pdf"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add your images to PDF format"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/qr_to_pdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"

            android:gravity="center">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_qrcode_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QR Code to PDF"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Convert your QR Code to PDF"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView> <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/barcode_to_pdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_barcode_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barcode to PDF"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Convert your Barcode to PDF"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/excel_to_pdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_excel"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/excel_to_pdf"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Convert your Excel to PDF"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
